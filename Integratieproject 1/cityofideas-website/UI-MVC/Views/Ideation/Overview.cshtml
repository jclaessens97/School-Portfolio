@using Microsoft.CodeAnalysis.CSharp
@model COI.UI_MVC.Models.IdeationViewModel

@{
    ViewData["Title"] = "Overview";
}
<div class="container">
    <a asp-controller="Project" asp-action="Details" asp-route-id="@ViewBag.ProjectId" class="btn-default"><i class="fas fa-backward"></i>  naar project</a>
    <h2 class="mt-3">@Model.CentralQuestion</h2>
    <p>@Model.Description</p>
    <a href="@Model.Url" target="_blank" class="btn-default">Meer informatie</a>

    @Html.HiddenFor(i => i.IdeationId)
    <h3 class="mt-4">Steun je favoriete idee <strong>of</strong> <a class="btn-default font-weight-normal" asp-action="Reply" asp-route-id="@Model.IdeationId">stuur je eigen idee in</a></h3>
    <hr/>

    <h3>Alle ideeën</h3>

    <div class="card text-center">
        <div class="card-header">
            <ul class="nav nav-pills card-header-pills">
                <li class="nav-item">
                    <a class="nav-link active" href="#" id="trending">Opkomend</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" id="best">Beste</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" id="newest">Niewste</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" id="controversial">Controversieel</a>
                </li>
                @if (ViewBag.IsMod)
                {
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="#" id="reported">Gerapporteerd</a>
                    </li>
                }
            </ul>
        </div>
        <div class="card-body pl-0 pr-0">
            <div class="container">
                <div class="row" id="card-container">
                </div>
            </div>
            <div class="spinner-border" role="status" id="loader">
                <span class="sr-only">Loading...</span>
            </div>
            <div id="no-ideas" class="d-none">
                <h5 class="card-title">Helaas!</h5>
                <p class="card-text">Hier zijn momenteel nog geen ideeën te zien</p>
                <a asp-action="Reply" asp-route-id="@Model.IdeationId" class="btn-default">Wees de eerste</a>
            </div>
        </div>
        <nav>
            <ul class="pagination" id="pages">
            </ul>
        </nav>
    </div>
</div>


@section Scripts {
    <script type="module" src="~/dist/ideationReplyOverview.entry.js" defer></script>
}