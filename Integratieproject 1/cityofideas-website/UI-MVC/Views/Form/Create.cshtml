@model COI.UI_MVC.Models.CreateFormViewModel

@{
    ViewBag.Title = "Nieuwe form aanmaken";
    Layout = "_Layout";
}

@section Scripts
{
    <script type="module" src="~/dist/createForm.entry.js" defer></script>
}

<div class="container">
    <a asp-controller="Project" asp-action="Details" asp-route-id="@Model.ProjectId" class="btn-default"><i class="fas fa-backward"></i>  naar project</a>
    <h2 class="mt-3">Nieuwe form aanmaken</h2>

    <form>
        <input type="hidden" value="@Model.ProjectId" id="ProjectId"/>
        <div class="form-group">
            <label asp-for="FormTitle">Titel</label><br/>
            <input id="FormTitle" asp-for="FormTitle" class="form-control" required/>
            <span id="error-FormTitle" class="error"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProjectTitle">Project</label><br/>
            <input asp-for="ProjectTitle" readonly class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Phase">Phase</label>
            <select id="PhaseId" asp-for="Phase" asp-items="@(Model.Phases.Select(p => new SelectListItem {Text = p.Title, Value = p.PhaseId.ToString()}))" class="form-control"></select>
        </div>
        <div class="form-group">
            <label for="FormType">
                Vragenlijst type<span class="text-danger">*</span>
            </label><br/>
            <select id="FormType" class="form-control">
                <option value="-1">Maak een keuze</option>
                <option value="0">Traditionele vragenlijst</option>
                <option value="1">Stelling (met mogelijkheid link te leggen met IoT opstelling)</option>
            </select>
            <span id="error-FormType" class="error"></span>
        </div>

        <h4>Instellen vragen</h4>

        <div id="form-wrapper">

        </div>

        <div id="buttons-wrapper">

        </div>
        <span id="error-questions" class="error"></span>


        <br/>
        <button id="SaveBtn" type="button" class="btn-default">Opslaan</button>

    </form>

    <div id="modal" class="modal">

    </div>
</div>

